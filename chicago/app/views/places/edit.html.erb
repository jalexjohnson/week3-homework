<h2>Edit a Place </h2>
<form action="/places/<%= @place.id %>/update">
	<p>Title: <input type="text" name="title" size="70" maxlength="255" value="<%= @place.title %>" required></p>
	<p>Photo URL: <input type="url" name="photo_url" size="120" value="<%= @place.photo_url %>" required></p>
	<p>Price: <input type="number" name="price" min="0" step="0.01" value="<%= sprintf "%.2f", @place.price/100.0 %>" required></p>
	<p>Description: <br><textarea name="description" rows="5" cols="100" maxlength="1000" required><%= @place.description %></textarea></p>
	<p><input type="submit" value="Submit"></p>
</form>